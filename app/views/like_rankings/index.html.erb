<!-- meta -->
<% content_for :title do %>
  いいねランキング | キリスト教会マップ
<% end %>
<% content_for :keywords do %>
  キリスト教,教会,church,プロテスタント,いいね,ランキング
<% end %>
<% content_for :description do %>
  教会のいいねランキングです。
<% end %>

<div class="line-section-small">
  <div class="container">
    <div class="row">
      <div class="col-lg-12 text-center">
        <h2>いいねランキング</h2>
      </div>
    </div>
  </div>
</div>

<!-- 教会一覧 -->
<div class="line-section-middle">
  <div class="container">
    <div class="row">
      <div class="col-lg-12">
        <% @churches.each do |church| %>
          <%= react_component("like_rankings/Church",
                              {
                                likesCount: church.likes.count,
                                name: church.name,
                                groupName: church.group.name,
                                address: church.address,
                                churchPath: church_path(church),
                                url: church.url
                              }) %>
        <% end %>
      </div>
    </div>
  </div>
</div>
