@import "variables.scss";
@import "mixins.scss";

// 共通
.church-header {
  background-image: url(<%= asset_path 'church_top_2.jpg' %>);
  background-repeat: no-repeat;
  background-attachment: scroll;
  background-position: center center;
  @include background-cover;
  text-align: center;
  color: white;
  .intro-text {
    padding-top: 100px;
    padding-bottom: 50px;
    .intro-lead-in {
      @include serif-font;
      font-style: italic;
      font-size: 22px;
      line-height: 22px;
      margin-bottom: 25px;
    }
    .intro-heading {
      @include heading-font;
      font-weight: 700;
      font-size: 30px;
      line-height: 50px;
      margin-bottom: 25px;
    }
  }
}

// PC用
@media(min-width:768px) {
  .church-header {
    .intro-text {
      padding-top: 200px;
      padding-bottom: 200px;
      .intro-lead-in {
        @include serif-font;
        font-style: italic;
        font-size: 40px;
        line-height: 40px;
        margin-bottom: 25px;
      }
      .intro-heading {
        @include heading-font;
        font-weight: 700;
        font-size: 75px;
        line-height: 75px;
        margin-bottom: 50px;
      }
    }
  }
}

// Google Map
// 共通
#google-map {
  #church_map {
    width: 100%;
    max-height: 100%;
  }
}

// スマホ用
@media(max-width:767px) {
  #google-map {
    #church_map {
      height: 400px;
    }
    padding: 10px 0;
  }
}

// PC用
@media(min-width:768px) {
  #google-map {
    padding: 0;
    #church_map {
      height: 400px;
      max-height: 100%;
    }
  }
}

